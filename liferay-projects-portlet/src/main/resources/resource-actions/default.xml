<?xml version="1.0"?>
<!DOCTYPE resource-action-mapping PUBLIC "-//Liferay//DTD Resource Action Mapping 6.2.0//EN"
"http://www.liferay.com/dtd/liferay-resource-action- mapping_6_2_0.dtd">

<resource-action-mapping>
    <portlet-resource>
        <portlet-name>liferay-projects</portlet-name>
        <permissions>
            <supports>
                <action-key>ADD_TO_PAGE</action-key>
                <action-key>CONFIGURATION</action-key>
                <action-key>VIEW</action-key>
            </supports>
            <site-member-defaults>
                <action-key>VIEW</action-key>
            </site-member-defaults>
            <guest-defaults>
                <action-key>VIEW</action-key>
            </guest-defaults>
            <guest-unsupported />
        </permissions>
    </portlet-resource>

    <model-resource>
        <model-name>com.altran.liferay.model.Project</model-name>
        <portlet-ref>
            <portlet-name>liferay-projects</portlet-name>
        </portlet-ref>
        <permissions>
        <supports>
            <action-key>ADD_PROJECT</action-key>
            <action-key>VIEW_PROJECT</action-key>
            <action-key>UPDATE_PROJECT</action-key>
            <action-key>DELETE_PROJECT</action-key>
        </supports>
        <site-member-defaults>
            <action-key>VIEW_PROJECT</action-key>
        </site-member-defaults>
        <guest-defaults>
            <action-key>VIEW_PROJECT</action-key>
        </guest-defaults>
        <guest-unsupported>
            <action-key>ADD_PROJECT</action-key>
            <action-key>UPDATE_PROJECT</action-key>
            <action-key>DELETE_PROJECT</action-key>
        </guest-unsupported>
        </permissions>
    </model-resource>
</resource-action-mapping>